{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "src/**/*/*"
  ]
}
